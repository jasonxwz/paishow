<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_fragment"
    android:background="#ededed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toubu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">


        <TextView

            android:text="我的"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </RelativeLayout>

<ScrollView


        android:layout_below="@+id/rl_toubu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#fff"
            android:id="@+id/rl_geren_beijing"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/iv_geren_beijing"
           
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_touxiang"
                android:src="@drawable/touxiang"
                android:layout_width="80dp"
                android:layout_marginTop="50dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/iv_sex"
                android:src="@drawable/sex_selector"
                android:layout_toRightOf="@id/iv_touxiang"
                android:layout_below="@id/iv_touxiang"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="-17dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/tv_name"
                android:text="哈哈"
                android:textSize="18sp"
                android:textColor="@color/importBlack"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_jianjie"

                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<ImageView
                android:id="@+id/iv_vip"
                android:src="@drawable/vip_selector"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="135dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_toEndOf="@+id/tv_name" />-->
            <TextView
                android:id="@+id/tv_rank"
                android:textSize="16sp"
                android:textColor="#ffd700"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RadioGroup
            android:id="@+id/rg_dgf"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_geren_beijing"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_height="50dp">


            <RelativeLayout
                android:id="@+id/rl_dongtai"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_wodedongtai_xianshi"
                    android:text="11"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tv_wodedongtai"
                    android:text="动态"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:layout_below="@id/tv_wodedongtai_xianshi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fensi"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_fensi_xianshi"

                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tv_fensi"
                    android:text="粉丝"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:layout_below="@id/tv_fensi_xianshi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_guanzhu"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_guanzhi_xianshi"

                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tv_guanzhu"
                    android:text="关注"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:layout_below="@id/tv_guanzhi_xianshi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </RelativeLayout>


        </RadioGroup>
        <RelativeLayout
            android:id="@+id/rl_wodexiangce"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_below="@+id/rg_dgf"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_xiangce"
                android:text="我的相册"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/xiangce"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

   <!-- <RelativeLayout
        android:id="@+id/rl_yuwoxiangguan"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_wodexiangce"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_yuwoxiangguan"
            android:text="与我相关"
            android:layout_marginLeft="50dp"
            android:background="#fff"
            android:textColor="#000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/yuwoxiangguan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/qianjin"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
-->
        <RelativeLayout
            android:id="@+id/rl_dengjichenghao"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_wodexiangce"
            android:layout_marginTop="1dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_dengjichenghao"
                android:text="等级称号"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/dengji"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shiguangzhou"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_dengjichenghao"
            android:layout_marginTop="1dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_shiguangzhou"
                android:text="我的PK"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/shijianzhou"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cangaoxiang"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_shiguangzhou"
            android:layout_marginTop="1dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_caogaoxiang"
                android:text="草稿箱"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/caogaoxiang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shezhi"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_cangaoxiang"
            android:layout_marginTop="1dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_shezhi"
                android:text="设置"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/shezhi"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

    </RelativeLayout>
  </ScrollView>


</RelativeLayout>
