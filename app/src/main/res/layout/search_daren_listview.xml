<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

<ImageView
    android:id="@+id/iv_userImage"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ninja_01"
    />
    <TextView
        android:id="@+id/tv_userName"
        android:layout_toRightOf="@id/iv_userImage"
        android:layout_alignTop="@id/iv_userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户ID"
        android:layout_marginLeft="40dp"
        android:textSize="19sp"
        android:textColor="#2c2c2c"/>
    <TextView
        android:id="@+id/tv_userDengji"
        android:text="等级 :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_userImage"
        android:layout_toRightOf="@id/iv_userImage"
        android:layout_marginLeft="40dp"
        android:textSize="19sp"
        android:textColor="#2c2c2c"
        />
    <TextView
        android:id="@+id/tv_dengjiNum"
        android:text="14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_userImage"
        android:layout_toRightOf="@+id/tv_userDengji"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="#2c2c2c"/>
</RelativeLayout>
