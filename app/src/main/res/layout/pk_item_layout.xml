<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hezhihu89="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.asus.paishow.SentActivity">
    <LinearLayout
        android:id="@+id/dongtai_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_returntohome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/backup"

            />
        <TextView
            android:id="@+id/id_prod_list_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:text="图片pk"
            android:textColor="#ea8010"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_sent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shareaaa"
                android:scaleType="centerCrop"

                />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/dongtai_title">

        <RelativeLayout
            android:id="@+id/btn_container_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_leizhu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3333"
                android:text="擂主"
                android:textSize="20dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dip"
                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_container_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_tiaozhanzhe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5599FF"
                android:text="挑战者"
                android:textSize="20dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dip"
                />


        </RelativeLayout>



    </LinearLayout>
     <!--<RelativeLayout-->
    <!--android:id="@+id/rl_vs"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content">-->
    <ImageView
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vs"
        android:layout_below="@id/dongtai_title"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/pk_picture"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/main_linear">



        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/left"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"

                />



        </RelativeLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/lv_duojipinglun"
        android:layout_below="@+id/pktime"
        android:layout_width="wrap_content"
        android:layout_height="110dp">
    </ListView>

    <TextView
        android:id="@+id/loadmore"
        android:layout_below="@+id/lv_duojipinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dip"
        android:text="加载更多评论"
        android:textColor="#888"
        android:layout_above="@+id/area_commit"
        />

    <LinearLayout
        android:id="@+id/area_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dip"
        android:focusable="true"
        android:focusableInTouchMode="true"


        >

        <EditText

            android:id="@+id/comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dip"
            android:layout_weight="1"

            android:ems="10"
            android:hint="来评论一句吧"
            android:minHeight="40dp"
            android:paddingLeft="4dip">

        </EditText>

        <Button
            android:id="@+id/comment_commit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="#FF7744"
            android:gravity="center"
            android:minWidth="80dp"
            android:padding="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="评论"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pktime"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/pk_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl_pk_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/iv_pk_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/a"/>

            <ImageView
                android:id="@+id/iv_loveleft"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/loveblue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:id="@+id/tv_pk_userName_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uzi"
                android:layout_alignLeft="@+id/iv_pk_left"
                android:textColor="@color/textBlack"
                android:textSize="16sp"
                android:layout_below="@+id/iv_pk_left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="剩余时间:"
                android:gravity="center|top"
                android:layout_marginTop="3dp"
               android:textColor="#888"
                />
            <com.example.asus.paishow.view.TimeView
                android:layout_marginTop="20dp"
                android:id="@+id/time_demo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                android:background="#fafafa"
                android:gravity="center"
                android:textColor="#ea8010"
                android:textSize="20sp"
                hezhihu89:time="86400" />



        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_pk_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/iv_pk_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/b"/>
            <TextView
                android:id="@+id/tv_pk_userName_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/iv_pk_right"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/iv_pk_right"
                android:text="imp"

                android:textColor="@color/textBlack"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_loveright"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/loveblue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <!--<Button-->
        <!--android:layout_below="@+id/time_demo"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:onClick="update"-->
        <!--android:text="restart(100) 100s" />-->
