<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_she_zhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.example.ssnn.SheZhiActivity">
    <RelativeLayout
        android:id="@+id/rl_shezhi_toubu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView

            android:text="设置"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_shezhi_fanhui"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            />


    </RelativeLayout>

    <RelativeLayout

        android:background="#ededed"
        android:layout_below="@+id/rl_shezhi_toubu"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_xiugaimima"
            android:layout_marginTop="5dp"
            android:background="#fff"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_xiugaimima"
                android:text="  修改密码"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/iv_qianjin_xiugaimima"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"  />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qingchuhuancun"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:layout_below="@id/rl_xiugaimima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_qingchuhuancun"
                android:text="  清除缓存"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/iv_qianjin_qingchuhuancun"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"  />
            <TextView
                android:id="@+id/tv_qingchuhuanchun_daxiao"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="0M"
                android:layout_toLeftOf="@+id/iv_qianjin_qingchuhuancun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_gengxinbanben"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_below="@+id/rl_qingchuhuancun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gengxinbanben"
                android:text="  更新版本"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/iv_qianjin_gengxinbanben"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/qianjin"
                android:layout_width="40dp"
                android:layout_height="40dp"  />
            <TextView
                android:id="@+id/tv_gengxinbanben_banbenhao"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="v1.0.2.5"
                android:layout_toLeftOf="@+id/iv_qianjin_gengxinbanben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tuichudenglu"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_gengxinbanben"
            android:textColor="#f00"
            android:text="退出登录"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

</RelativeLayout>
