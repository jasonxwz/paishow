<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/iv_shuxian"
        android:src="@drawable/shuxian"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_shiguangzhou"
        android:src="@drawable/shiguangzhou"
        android:layout_centerVertical="true"
        android:layout_marginLeft="49dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/tv_shiguangzhou_riqi"
        android:text="日期：2016-01-01"
        android:layout_width="200dp"
        android:textColor="#003"
        android:layout_toRightOf="@id/iv_shuxian"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/tv_shiguangzhou_neirong"
        android:text="PK胜利！"
        android:textColor="#000"
        android:layout_width="160dp"
        android:textSize="16dp"
        android:gravity="center"
        android:background="#00EE76"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@id/iv_shuxian"
        android:layout_marginTop="35dp"
        android:layout_height="50dp" />

</RelativeLayout>
