<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ge_ren_zhu_ye"
    android:background="#ccc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ssnn.GeRenZhuYeActivity">
    <RelativeLayout
        android:id="@+id/rl_gerenzhuye_toubu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">


        <TextView

            android:text="个人主页"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
      <!--  <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_gerenzhuye_gengduo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/gengduo"
            android:layout_width="30dp"
            android:layout_height="30dp" />-->
        <ImageView
            android:id="@+id/iv_gerenzhuye_fanhui"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_height="35dp"
            android:layout_width="wrap_content"
             />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_gerenzhuye_yixiexinxi"
        android:layout_below="@+id/rl_gerenzhuye_toubu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#fff"
            android:id="@+id/rl_zhuye_beijing"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/iv_zhuye_beijing"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_zhuye_touxiang"
                android:src="@drawable/touxiang"
                android:layout_width="80dp"
                android:layout_marginTop="50dp"
                android:layout_height="80dp"

                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_fensi"
                android:text="粉丝："
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"
                android:layout_below="@+id/iv_zhuye_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_guanzhu"
                android:text="关注："
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="220dp"
                android:layout_below="@+id/iv_zhuye_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RadioGroup
            android:id="@+id/rg_dxy"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_zhuye_beijing"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_height="30dp">



            <TextView
                android:id="@+id/tv_wodedongtai"
                android:text="我的动态"
                android:gravity="center"
                android:textColor="@drawable/font_search_selector"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_xiangce"
                android:text="相册"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/font_search_selector"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_yuwoxiangguan"
                android:text="与我相关"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/font_search_selector"
                android:layout_width="match_parent"
                android:layout_height="30dp" />


    </RadioGroup>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_gerenzhuye"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_below="@+id/rl_gerenzhuye_yixiexinxi"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>
