<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="10dp">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_touxiang"
        android:src="@drawable/katongtouxiang"
        android:layout_marginLeft="7dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"

        />

    <TextView
        android:id="@+id/tv_name"
        android:text="aaa"
        android:textSize="17sp"
        android:textColor="#ea8010"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_touxiang"
        android:layout_alignTop="@id/iv_touxiang"
        />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="7dp"
        android:layout_height="wrap_content"
        android:text="5小时前"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/tv_name"
        android:layout_toEndOf="@id/iv_touxiang"
        android:textColor="#636363"
        />


    <RelativeLayout
        android:layout_marginTop="7dp"
        android:background="#f7f7f7"
        android:layout_below="@+id/iv_touxiang"
        android:id="@+id/rl_bao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView

        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="7dp"
        android:layout_height="wrap_content"
        android:text="我很烦"
        android:layout_marginTop="5dp"

        android:textColor="#636363"
        />
    <!---->
    <com.example.asus.paishow.view.NineGridTestLayout

        android:layout_below="@+id/tv_text"
        android:id="@+id/layout_nine_grid"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:sapcing="4dp" />

    </RelativeLayout>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/ll_line6"
    android:layout_below="@id/rl_bao"
    android:layout_width="wrap_content"
    android:layout_height="7dp"
    android:background="#f7f7f7">

</RelativeLayout>
    <LinearLayout

        android:id="@+id/gongneng"
        android:layout_below="@+id/ll_line6"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/border">


        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/zhuanfa"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="false"
                android:text="分 享  "
                android:textColor="#888"/>

        </LinearLayout>

        <View
            style="@style/md_line"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pinglun"/>
            <TextView
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="评 论  "/>

        </LinearLayout>

        <View
            style="@style/md_line"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/zanzan"
                android:id="@+id/iv_zan" />

            <TextView
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="点 赞  "
                android:id="@+id/textView" />

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
