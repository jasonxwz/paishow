<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_xiu_gai_jian_jie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.example.ssnn.xiugaiziliao.XiuGaiJianJieActivity">
    <RelativeLayout
        android:id="@+id/rl_xiugaijianjie_toubu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">


        <TextView

            android:text="简介"
            android:textColor="#000"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_xiugaijianjie_fanhui"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/fanhui"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/tv_jianjie_baocun"
            android:text="保存"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_jianjie"
        android:gravity="top"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:background="@drawable/corners_bg"
        android:layout_below="@id/rl_xiugaijianjie_toubu"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</RelativeLayout>
