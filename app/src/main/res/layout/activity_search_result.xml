<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_search"
    tools:context="com.example.asus.paishow.SearchResultActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="7dp"
    android:background="#f7f7f7">

</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/rl_search_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#f7f7f7"


        >

        <Button
            android:paddingLeft="15dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/btn_back_search_selector"
            android:drawablePadding="-15dp"
            android:background="#f7f7f7"
            android:text="搜索"
            android:textColor="@drawable/font_back_search"
            android:textSize="14sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_back"
            android:layout_toLeftOf="@+id/btn_backtosearch"
            android:layout_alignTop="@+id/btn_back"
            android:layout_alignBottom="@+id/btn_back"
            android:text="搜索内容"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ff8200"
            />

        <Button

            android:id="@+id/btn_backtosearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn_back"
            android:layout_alignParentRight="true"
            android:background="#f7f7f7"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@drawable/font_back_search"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_line"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:layout_below="@id/rl_search_title"
        android:layout_width="match_parent"
        android:layout_height="6dp">

    </LinearLayout>
    <com.example.asus.paishow.widiget.SildingFinishLayout
        android:id="@+id/sf_cehua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_line">
        <ListView
        android:layout_below="@+id/rl_search_title"
        android:id="@+id/lv_searchresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    </com.example.asus.paishow.widiget.SildingFinishLayout>

</RelativeLayout>
