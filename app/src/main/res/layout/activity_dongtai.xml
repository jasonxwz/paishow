<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

        android:id="@+id/lv_dandongtai"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_touxiang"
            android:src="@drawable/katongtouxiang"
            android:layout_marginRight="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/tv_name"
            android:text="aaa"
            android:textSize="20sp"
            android:textColor="#000000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_alignTop="@id/iv_touxiang"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="5小时前"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/tv_name"
            android:layout_toEndOf="@id/iv_touxiang"
            />

        <TextView

            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="动态标题"
            android:layout_marginTop="8dp"
            android:layout_below="@id/iv_touxiang"

            />
        <TextView

            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="我很烦"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_title"/>

        <ImageView
            android:id="@+id/iv_ha"
            android:src="@drawable/ha"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
