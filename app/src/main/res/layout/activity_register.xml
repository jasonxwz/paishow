<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_register"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/de_frm_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/de_register_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-300dp"
            android:scaleType="center"
            android:background="@drawable/backp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!--<ImageView-->
                <!--android:id="@+id/de_login_logo"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="50dp"-->
                <!--android:src="@drawable/a" />-->

            <com.example.asus.paishow.widiget.ClearWriteEditText
                android:id="@+id/reg_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:hint="昵称"
                android:drawableLeft="@drawable/nickname"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textColorHint="#FFFFFF"/>

            <com.example.asus.paishow.widiget.ClearWriteEditText
                android:id="@+id/reg_phoNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:hint="手机号码"
                android:drawableLeft="@drawable/ic_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textColorHint="#FFFFFF"/>

            <com.example.asus.paishow.widiget.ClearWriteEditText
                android:id="@+id/reg_psd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:hint="密码（至少六位）"
                android:drawableLeft="@drawable/ic_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textColorHint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp">

                <com.example.asus.paishow.widiget.ClearWriteEditText
                    android:id="@+id/reg_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:hint="短信验证码"
                    android:drawableLeft="@drawable/ic_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="#FFF"
                    android:textColorHint="#FFFFFF" />

                <Button
                    android:id="@+id/reg_getCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="4"
                    android:background="@drawable/rs_select_btn_reg_gray"
                    android:clickable="false"
                    android:minHeight="1dp"
                    android:minWidth="1dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="获取验证码"
                    android:textColor="#FFF"
                    android:textSize="12dp" />

            </LinearLayout>

            <Button
                android:id="@+id/de_register_sign"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/rs_select_btn_reg_gray"
                android:text="注册"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/de_register_forgot"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:text="忘记密码" />

    <TextView
        android:id="@+id/de_register_login"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="登录" />

</RelativeLayout>
